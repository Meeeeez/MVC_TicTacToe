<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootLayout">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/helpField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="X ist dran"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Button
                            android:id="@+id/field1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/field2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/field3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Button
                            android:id="@+id/field4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/field5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/field6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Button
                            android:id="@+id/field7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/field8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />

                        <Button
                            android:id="@+id/field9"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="35px"
                            android:backgroundTint="#B1B0B0"
                            android:textSize="36sp" />
                    </TableRow>

                </TableLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:gravity="center">

                <Button
                    android:id="@+id/restartGameBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px"
                    android:text="Restart"
                    app:cornerRadius="50px" />

            </TableRow>

            <TableRow
                android:layout_marginTop="10sp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/xWins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="X Wins: 0"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/oWins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25px"
                        android:gravity="center"
                        android:text="O Wins: 0"
                        android:textSize="24sp" />

                </LinearLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>